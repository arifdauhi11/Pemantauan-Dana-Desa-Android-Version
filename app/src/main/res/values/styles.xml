<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash application theme. -->
    <style name="SplashAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--    Material Style-->
    <style name="Toolbar.Light">
        <item name="android:textColorPrimary">@color/grey_60</item>
        <item name="colorControlNormal">@color/grey_60</item>
    </style>

    <style name="Toolbar"></style>

    <style name="TextAppearance.AppCompat.Subhead.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
